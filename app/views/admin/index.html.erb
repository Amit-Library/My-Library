<h1 style="float: left;color: purple;">Welcome Admin</h1></br>
<p id="notice"><%= notice %></p>
<table class="table">
  <thead>
    <tr>
      <th>User name</th>
      <th>Email Id</th>
      <th>User Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %>&nbsp;<%= user.last_name %></td>
        <td><%= user.email %></td>
        <td><%= user.log_type %></td>
        <td><%= link_to 'Destroy', admin_destroy_path, 
                                    method: :delete, data: 
                                    { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
