
<p id="notice"><%= notice %></p>
<div class="container">
  <div class="row">
    <div class="col-lg-6 col-lg-offset-4">
      <p>
        <strong>Image:</strong>
        <%= image_tag @book.photo.url, :size => '150x150' %>
      </p>
      <p>
        <strong>Book name:</strong>
        <%= @book.book_name %>
      </p>

      <p>
        <strong>Author name:</strong>
        <%= @book.author_name %>
      </p>

      <p>
        <strong>Price:</strong>
        <%= @book.price %>
      </p>

      <p>
        <strong>Description:</strong>
        <%= @book.description %>
      </p>

      <p>
        <strong>User:</strong>
        <%= @book.user_id %>
      </p>
      <% if current_user.seller? %>
      <%= link_to 'Edit', edit_book_path(@book) %> |
      <%= link_to 'Back', sellers_index_path %>
      <% else %>
      <%= link_to 'Back', buyers_index_path %>
      <%end %>
    </div>
  </div>
</div>